{
  "files": ["build/electron", "www", "!node_modules/electron"],
  "asarUnpack": ["third_party", "tools"],
  "artifactName": "Outline-Client.${ext}",
  "directories": {
    "output": "build/dist"
  },
  "linux": {
    "target": ["AppImage"],
    "files": [
      "src/electron/linux/resources/icons",
      "src/electron/linux/resources/tray",
      "src/electron/linux/tools/outline_proxy_controller/dist",
      "third_party/outline-go-tun2socks/linux"
    ],
    "icon": "src/electron/linux/resources/icons",
    "category": "Network"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": "ia32"
      }
    ],
    "files": ["src/electron/windows/resources/tray", "third_party/outline-go-tun2socks/win32"],
    "icon": "src/electron/windows/icons/icon.ico",
    "sign": "src/electron/windows/scripts/electron_builder_signing_plugin.cjs"
  },
  "nsis": {
    "perMachine": true,
    "include": "src/electron/windows/custom_install_steps.nsh"
  }
}
